CREATE TABLE usuario (
    id SERIAL PRIMARY KEY,
    username VARCHAR(50) NOT NULL,
    email VARCHAR(100) UNIQUE NOT NULL,
    password TEXT NOT NULL,
    estado BOOLEAN DEFAULT FALSE,  -- Cambiado a FALSE por defecto
    verification_code VARCHAR(6),  -- Nuevo campo para el c칩digo de verificaci칩n
    fecha_registro TIMESTAMP DEFAULT CURRENT_TIMESTAMP  -- Opcional: para saber cu치ndo se registr칩
);

CREATE TABLE consulta (
    id SERIAL PRIMARY KEY,
    usuario_id INT REFERENCES usuario(id),
    tipo VARCHAR(30),
    parametros TEXT,
    resultado TEXT,
    fecha TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);